{
  "name": "@jrmarcum/wasmtk",
  "version": "1.1.1",
  "description": "A polyglot WASM toolkit for Deno: Run, inspect, and convert WASM/WAT and WASI modules with high compatibility.",
  "license": "Apache-2.0 AND MIT",
  "exports": {
    ".": "./main.ts",
    "./utils": "./utils.ts",
    "./runner": "./runner.ts",
    "./args": "./args.ts",
    "./compiler": "./compiler.ts"
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "*.ts",
      "deno.json"
    ]
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.26",
    "@std/assert": "jsr:@std/assert@1.0.0",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/encoding": "jsr:@std/encoding@^1.0.5",
    "binaryen": "npm:binaryen@^116.0.0",
    "asc": "npm:assemblyscript@^0.27.30/asc",
    "@std/cli/parse-args": "jsr:@std/cli/parse-args",
    "wasm2js": "npm:wasm2js@^0.2.0"
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "cache": "deno cache main.ts",
    "update-version": "deno run --allow-read --allow-write -e 'import { updateVersion } from \"./utils.ts\"; updateVersion();'",
    "install": "deno task cache && deno install -g --allow-run --allow-read --allow-write --allow-env --allow-ffi --allow-net --config deno.json --force -n wasmtk main.ts",
    "compile": "deno compile -A --output wasmtk main.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true
  }
}